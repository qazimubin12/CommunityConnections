        @model CommunityConnections.ViewModels.SectionListingViewModel
        @{
            ViewBag.Title = "_Listing";
        }

        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                @if (Model.Sections.Count() != 0)
                {
                    <div class="card">

                        <div class="table-responsive">
                            <table class="table table-striped table-hover ">
                                <thead>
                                    <tr>

                                        <th>
                                            Section Name
                                        </th>
                                        <th>
                                           Start Page
                                        </th>
                                        <th>
                                            End Page
                                        </th>
                               
                                


                                        <th>
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Sections)
                                    {
                                        <tr>
                                            <td>@item.SectionName </td>
                                            <td>@item.StartPage</td>
                                            <td>@item.EndPage</td>

                                  
                                            <td>
                                                <button data-id="@item.ID" type="button" class="btnEdit btn btn-info btn-icon-text"><i class="mdi mdi-pencil"></i> EDIT</button>
                                                <a href="@Url.Action("Delete", "Section", new { ID = item.ID })" class="data-btn btn btn-danger btn-icon-text"><i class="mdi mdi-delete"></i>DELETE</a>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {

                    <div class="alert alert-warning col-md-12" role="alert">
                        Sorry! No records exist.
                    </div>
                }
            </div>
        </div>

        <script>
            $(".btnEdit").click(function () {
                $.ajax({
                    url: '@Url.Action("Action", "Section")',
                    type: "GET",
                    data: {ID: $(this).attr("data-id") }
                })
                    .done(function (oData) {
                        $("#actionContainer").html(oData);
                    })
                    .error(function (error) {
                        alert(error);
                    })
            })


        </script>


