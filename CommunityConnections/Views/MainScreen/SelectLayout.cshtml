@model CommunityConnections.ViewModels.MainScreenViewModel
@{
    ViewBag.Title = "SelectLayout";
}

<div id="actionContainer" class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Ad.Name -- Select Layout</h4>
        <table class="table table-responsive">

            <tr>
                <td>
                    @{ int counter = 0;}

                    @foreach (var item in Model.Layouts)
                    {
                        {counter++; }
                        <button value="@counter">@item</button>
                    }
                </td>
            </tr>

        </table>
    </div>
</div>

