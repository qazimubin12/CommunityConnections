<body>
    <div class="container">
        <div class="row">
            <a class="btn btn-block btn-outline-primary" href="@Url.Action("","")">Back To Dashboard</a>
        </div>

    </div>



    <div class="row">
        <div class="col-md-3 table-responsive">

            <table id="launchPad" style="z-index:9;margin-top:5px; overflow:hidden;" class="table table-condensed table-hover table-responsive ">
                <thead>
                    <tr>

                        <th>
                            Ad
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.NonPlacedAds)
                    {
                        <tr>

                            <td id="@item.ID" class="draggable">
                                <div>
                                    <h4>@item.Name</h4>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>


        <div class="col-md-9">
            <table>
                @{ var counter = 1;
                    int newcounter = 0;}
                <tr>

                    @for (int i = 1; i <= Model.Pages.PageNo; i++)
                    {

                        if (counter % 2 == 0)
                        {
                            <td style="padding-right: 15px;" id="@counter">
                                <div class="btn-group-justified" role="group" aria-label="Basic example">
                                    <button data-id="@counter" onclick="" type="button" class="btnSearchAdsInPage btn btn-outline-warning"><i class="ti-search btn-icon-append"></i></button>
                                    <button data-id="@counter" onclick="" type="button" class="btnCustomerView btn btn-outline-warning"><i class="mdi mdi-account-circle"></i></button>
                                </div>
                                <div id="@counter" class="droppable" style="border:solid; height:300px;width: 10rem;">
                                    @{newcounter++;
                                    }
                                    @for (int n = 0; n < Model.PlacedAds.Count; n++)
                                    {


                                        if (Model.PlacedAds[n].PageNo == i || Model.PlacedAds[n].PageTwo == i)
                                        {



                                            if (Model.PlacedAds[n].AdSize == "Full Page")
                                            {
                                                <div id="@Model.PlacedAds[n].ID" class="draggable row">
                                                    <div class="col-md-12">
                                                        <a onclick="ViewAdd(@Model.PlacedAds[n].ID)">
                                                            <div>
                                                                <img class="fullpageAD" src="@Model.PlacedAds[n].Path" />
                                                            </div>
                                                        </a>
                                                    </div>
                                                </div>

                                            }
                                            else if (Model.PlacedAds[n].AdSize == "Full Page W’ Bleed")
                                            {
                                                <div id="@Model.PlacedAds[n].ID" class="draggable row">
                                                    <div class="col-md-12">
                                                        <a onclick="ViewAdd(@Model.PlacedAds[n].ID)">
                                                            <div class="">
                                                                <img src="@Model.PlacedAds[n].Path" style="height: 286px;width: 146px;" />
                                                            </div>
                                                        </a>
                                                    </div>



                                                </div>
                                            }
                                            else if (Model.PlacedAds[n].AdSize == "1/3 Page")
                                            {
                                                <div id="@Model.PlacedAds[n].ID" class="draggable row">
                                                    <div class="col-md-12">
                                                        <a onclick="ViewAdd(@Model.PlacedAds[n].ID)">
                                                            <div class="">
                                                                <img class="Ad1by3" src="@Model.PlacedAds[n].Path" />
                                                            </div>
                                                        </a>
                                                    </div>
                                                </div>
                                            }
                                            else if (Model.PlacedAds[n].AdSize == "3/4 Page")
                                            {
                                                <div id="@Model.PlacedAds[n].ID" class="draggable row">
                                                    <div class="col-md-12">
                                                        <a onclick="ViewAdd(@Model.PlacedAds[n].ID)">
                                                            <div class="">
                                                                <img class="Ad3by4" src="@Model.PlacedAds[n].Path" />
                                                            </div>
                                                        </a>
                                                    </div>
                                                </div>
                                            }
                                            else if (Model.PlacedAds[n].AdSize == "1/8 Page")
                                            {
                                                
                                                <div id="@Model.PlacedAds[n].ID" class="draggable row">
                                                    <div class="col-md-12">
                                                        <a onclick="ViewAdd(@Model.PlacedAds[n].ID)">
                                                            <div class="">
                                                                <img class="AD1by8" src="@Model.PlacedAds[n].Path" />
                                                            </div>
                                                        </a>
                                                    </div>
                                                </div>
                                            }

                                        }

                                    }


                                    @{count++;}



                                    @*counter*@

                                </div>
                                <h4 style="margin-left:70px;">@count.ToString()</h4>


                            </td>
                        }
                        else
                        {
                            <td id="@counter">
                                <div class="btn-group-justified" role="group" aria-label="Basic example">
                                    <button data-id="@counter" onclick="" type="button" class="btnSearchAdsInPage btn btn-outline-warning"><i class="ti-search btn-icon-append"></i></button>
                                    <button data-id="@counter" onclick="" type="button" class="btnCustomerView btn btn-outline-warning"><i class="mdi mdi-account-circle"></i></button>
                                </div>
                                <div id="@counter" class="droppable" style="border:solid; height:300px;width: 10rem;">
                                    @{newcounter++;
                                    }
                                    @for (int n = 0; n < Model.PlacedAds.Count; n++)
                                    {


                                        if (Model.PlacedAds[n].PageNo == i)
                                        {



                                            if (Model.PlacedAds[n].AdSize == "Full Page")
                                            {
                                                <div id="@Model.PlacedAds[n].ID" class="draggable row">
                                                    <div class="col-md-12">
                                                        <a onclick="ViewAdd(@Model.PlacedAds[n].ID)">
                                                            <div>
                                                                <img class="fullpageAD" src="@Model.PlacedAds[n].Path" />
                                                            </div>
                                                        </a>
                                                    </div>
                                                </div>

                                            }
                                            else if (Model.PlacedAds[n].AdSize == "Full Page W’ Bleed")
                                            {
                                                <div id="@Model.PlacedAds[n].ID" class="draggable row">
                                                    <div class="col-md-12">
                                                        <a onclick="ViewAdd(@Model.PlacedAds[n].ID)">
                                                            <div class="">
                                                                <img src="@Model.PlacedAds[n].Path" style="height: 286px;width: 146px;" />
                                                            </div>
                                                        </a>
                                                    </div>



                                                </div>
                                            }
                                            else if (Model.PlacedAds[n].AdSize == "1/3 Page")
                                            {
                                                <div id="@Model.PlacedAds[n].ID" class="draggable row">
                                                    <div class="col-md-12">
                                                        <a onclick="ViewAdd(@Model.PlacedAds[n].ID)">
                                                            <div class="">
                                                                <img class="Ad1by3" src="@Model.PlacedAds[n].Path" />
                                                            </div>
                                                        </a>
                                                    </div>
                                                </div>
                                            }
                                            else if (Model.PlacedAds[n].AdSize == "3/4 Page")
                                            {
                                                <div id="@Model.PlacedAds[n].ID" class="draggable row">
                                                    <div class="col-md-12">
                                                        <a onclick="ViewAdd(@Model.PlacedAds[n].ID)">
                                                            <div class="">
                                                                <img class="Ad3by4" src="@Model.PlacedAds[n].Path" />
                                                            </div>
                                                        </a>
                                                    </div>
                                                </div>
                                            }
                                            else if (Model.PlacedAds[n].AdSize == "1/8 Page")
                                            {
                                                <div id="@Model.PlacedAds[n].ID" class="draggable row">
                                                    <div class="col-md-12">
                                                        <a onclick="ViewAdd(@Model.PlacedAds[n].ID)">
                                                            <div class="">
                                                                <img class="AD1by8" src="@Model.PlacedAds[n].Path" />
                                                            </div>
                                                        </a>
                                                    </div>
                                                </div>
                                            }
                                        }

                                    }


                                    @{count++;}



                                    @*counter*@

                                </div>
                                <h4 style="margin-left:70px;">@count.ToString()</h4>


                            </td>
                        }

                        if (counter % 6 == 0)
                        {
                        @:</tr><tr>
                        }
                        { counter++; }





                    }
                </tr>

            </table>

        </div>
    </div>

    <div id="myModal" class="modal">

        <!-- Modal content -->
        @{
            if (Model.Ad != null)
            {
                Html.RenderPartial("SelectLayout", Model);
            }
        }

    </div>


    <div id="AdsViewModal" class="modal">

        <!-- Modal content -->
        @{
            if (Model.Ad != null)
            {
                Html.RenderPartial("AdsView", Model);
            }
        }

    </div>






    <script>







        $("#launchPad").height($(window).height() - 20);
        var dropSpace = $(window).width() - $("#launchPad").width();
        $("#dropZone").width(dropSpace - 70);
        $("#dropZone").height($("#launchPad").height());


        $(".draggable").draggable({
            appendTo: "body",
            cursor: "hand",
            helper: 'clone',
            revert: "invalid"
        });


        $("#launchPad").droppable({

            tolerance: "intersect",
            accept: ".draggable",
            activeClass: "ui-state-default",
            hoverClass: "ui-state-hover",
            drop: function (event, ui) {
                var DataID = ui.draggable.attr("id");
                $.ajax({
                    url: '@Url.Action("UndoPlacing", "MainScreen")',
                    type: 'POST',
                    data: {
                        DataID: DataID,
                    }


                }).done(function (oData) {

            window.location.href = "@Url.Action("Index","MainScreen")";


                });

            }


        });

        $(".droppable").droppable({
            tolerance: "intersect",
            accept: ".draggable",
            activeClass: "ui-state-default",
            hoverClass: "ui-state-hover",
            drop: function (event, ui) {
                var AdID = ui.draggable.attr("id");
                var AdPage = (this).id;
                $.ajax({
                    url: '@Url.Action("PlaceAd", "MainScreen")',
                    type: 'POST',
                    data: {
                        AdID: AdID,
                        AdPage: AdPage
                    }


                }).done(function () {

                    window.location.href = "@Url.Action("Index","MainScreen")";


                });

            }


        });

         $(".btnSearchAdsInPage").click(function () {
            $.ajax({
                url: '@Url.Action("AdsView", "MainScreen")',
                type: "GET",
                data: { ID: $(this).attr("data-id") }
            })
                .done(function (oData) {
                    adsViewModal.style.display = "block";

                    $("#AdsViewModal").html(oData);
                })
                .error(function (error) {
                    alert(error);
                })
        });



        var modal = document.getElementById("myModal");
        var adsViewModal = document.getElementById("AdsViewModal");

        // Get the button that opens the modal

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];

        // When the user clicks on the button, open the modal




        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
            if (event.target == adsViewModal) {
                adsViewModal.style.display = "none";
            }
        }

        function ViewAdd(ID) {
            window.location.href = "/MainScreen/ViewAd?ID=" + ID + "";
        };








    </script>

















