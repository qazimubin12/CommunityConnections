        $(".draggable").draggable({
            appendTo: "body",
            cursor: "hand",
            helper: 'clone',
            revert: "invalid"
        });

        $(".droppable").droppable({
            tolerance: "intersect",
            accept: ".draggable",
            activeClass: "ui-state-default",
            hoverClass: "ui-state-hover",
            drop: function (event, ui) {
                var AdID = ui.draggable.attr("id");
                var AdPage = (this).id;
                $.ajax({
                    url: '@Url.Action("PlaceAd", "MainScreen")',
                    type: 'POST',
                    data: {
                        AdID: AdID,
                        AdPage: AdPage
                    }


                }).done(function () {

                    window.location.href = "@Url.Action("Index","MainScreen")";


                });

            }


        });

        $("#launchPad").droppable({

            tolerance: "intersect",
            accept: ".draggable",
            activeClass: "ui-state-default",
