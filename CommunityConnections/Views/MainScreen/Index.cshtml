                .error(function (error) {
                    alert(error);
                })
        });



        var modal = document.getElementById("myModal");
        var adsViewModal = document.getElementById("AdsViewModal");
        var span = document.getElementsByClassName("close")[0];

        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
            if (event.target == adsViewModal) {
                adsViewModal.style.display = "none";
            }
        };


        function ShowToggle(ID, Counter) {


            $.ajax({
                url: '@Url.Action("GetAdStatus", "MainScreen")',
                type: "GET",
                data: { ID: ID }
            })
                .done(function (oData) {
                    var myData = oData;
                    var element = $(`.StatusButton[data-item=${Counter}]`);
                    var element2 = $(`.btnSearchAdsInPage[data-id=${Counter}]`);


                    if (element.is(":visible")) {
                    

                        element.attr('hidden', "hidden");
                        element2.attr('hidden', "hidden");
                    }
                    else {
                        element.removeAttr('hidden');
                        element2.removeAttr('hidden');
                    }
                    element.html(myData);
                });
            
        };




       

