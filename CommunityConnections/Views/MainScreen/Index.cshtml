<style>
    .card {
        margin-top: 2em;
        padding: 1.5em 0.5em 0.5em;
        border-radius: 1em;
        text-align: center;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    }

        .card img {
            width: 65%;
            border-radius: 50%;
            margin: 0 auto;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        .card .card-title {
            font-weight: 700;
            font-size: 1.5em;
        }

        .card .btn {
            border-radius: 2em;
            background-color: teal;
            color: #ffffff;
            padding: 0.5em 1.5em;
        }

            .card .btn:hover {
                background-color: rgba(0, 128, 128, 0.7);
                color: #ffffff;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            }
</style>
<body>
    <div class="container">
        <div class="row">
            <a class="btn btn-block btn-outline-primary" href="@Url.Action("","")">Back To Dashboard</a>
        </div>

    </div>



    <div class="row">
        <div class="col-md-3 table-responsive">

            <table id="launchPad" style="z-index:9;margin-top:5px; overflow:hidden;" class="table table-condensed table-hover table-responsive ">
                <thead>
                    <tr>

                        <th>
                            Ad
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Ads)
                    {
                        <tr>
                            
                            <td id="@item.ID" class="draggable" >
                                <div>
                                    <h4>@item.Name</h4>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>


        <div  class="col-md-9">
            <table cellpadding="3">
                @{ var counter = 1;
                    int newcounter = 0;}
                <tr>

                    @for (int i = 1; i <= Model.Pages.PageNo; i++)
                    {

                        <td id="@counter">
                            <div class="card droppable" style="height:300px;width: 10rem;">
                                <div class="card-body">
                                    @{newcounter++;
                                    }
                                    @for (int n = 0; n < Model.Ads.Count; n++)
                                    {


                                        if (Model.Ads[n].PageNo == i)
                                        {
                                            if (Model.Ads[n].AdSize == "Full Page")
                                            {
                                                <div class="card" style="background-color:burlywood; height:300px;width: 10rem;margin-left: -28px;margin-top: -44px;">
                                                    <div class="card-body">
                                                        <h4 style="color:white">@Model.Ads[n].Name</h4>
                                                    </div>
                                                </div>
                                            }

                                            if (Model.Ads[n].AdSize == "3/4")
                                            {
                                                <div class="card" style="background-color:cornflowerblue; height:220px;width: 10rem;margin-left: -28px;margin-top: -44px;">
                                                    <div class="card-body">
                                                        <h4 style="color:white">@Model.Ads[n].Name</h4>
                                                    </div>
                                                </div>
                                            }

                                            if (Model.Ads[n].AdSize == "half page vertical")
                                            {
                                                <div class="card" style="background-color:darkslategray; height:300px;width: 6rem;margin-left: -28px;margin-top: -44px;">
                                                    <div class="card-body">
                                                        <h6 style="color: white">@Model.Ads[n].Name</h6>
                                                    </div>
                                                </div>
                                            }

                                            if (Model.Ads[n].AdSize == "1/8 Page")
                                            {
                                                <div class="card" style="background-color: burlywood; height: 100px; width: 5rem; margin-left: -29px; margin-top: 156px; ">
                                                    <div class="card-body">
                                                        <label style="color: white; margin-top: -38px; margin-left: -22px;">@Model.Ads[n].Name</label>
                                                    </div>
                                                </div>
                                            }
                                        }

                                    }


                                    @{count++;}
                                </div>



                                @*counter*@
                                <h4>@count.ToString()</h4>

                            </div>

                        </td>

                        if (counter % 6 == 0)
                        {
                        @:</tr><tr>
                        }
                        { counter++; }





                    }
                </tr>

            </table>

        </div>
    </div>






    <script>

        $("#launchPad").height($(window).height() - 20);
        var dropSpace = $(window).width() - $("#launchPad").width();
        $("#dropZone").width(dropSpace - 70);
        $("#dropZone").height($("#launchPad").height());


        $(".draggable").draggable({
            appendTo: "body",
            cursor: "move",
            helper: 'clone',
            revert: "invalid"
        });


        $(".droppable").droppable({

            tolerance: "intersect",
            accept: ".draggable",
            activeClass: "ui-state-default",
            hoverClass: "ui-state-hover",
            drop: function (event, ui) {
                var DataID = ui.draggable.attr("id");
                var DroppedPage = (this).innerText;
                $.ajax({
                    url: '@Url.Action("SelectLayout", "MainScreen")',
                    type: 'GET',
                    data: {
                        DataID: DataID,
                        DroppedPage: DroppedPage
                    }


                }).done(function (oData) {

                    $("#actionContainer").html(oData);
                     

                });

            }


        });


    </script>
        
  










    




