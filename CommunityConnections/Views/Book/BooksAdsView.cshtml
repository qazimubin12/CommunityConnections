@model CommunityConnections.ViewModels.AdsListingViewModel
@{
    ViewBag.Title = "_Listing";
}
<div class="card">
  

        
    <div id="actionContainer">
        <div class="card-body">
            <h2>Ads on Book</h2>
            <hr />

            <div class="row">
                <div class="col col-lg-12">
                    <div class="row">

                        <div class="col-lg-12 grid-margin stretch-card">
                            @if (Model.Ads.Count() != 0)
                            {
                                <div class="card">

                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover ">
                                            <thead>
                                                <tr>

                                                    <th>Book Name</th>
                                                    <th>Name </th>
                                                    <th>PageNo </th>
                                                    <th>AdStatus </th>
                                                    <th>Status </th>
                                                    <th>Customer </th>
                                                    <th>CustomSpecification </th>
                                                    <th>AdDescription </th>
                                                    <th>AdSize </th>
                                                    <th>AdDate </th>
                                                    <th>Repeat </th>
                                                    <th>AddGraphics </th>
                                                    <th>Deluxe</th>
                                                    <th>Total </th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Ads)
                                                {
                                                    <tr data-id="@item.ID" class="btnView">
                                                        <td>@item.Book </td>
                                                        <td>@item.Name </td>
                                                        <td>@item.PageNo </td>
                                                        <td>@item.AdStatus </td>
                                                        <td>@item.Status </td>
                                                        <td>@item.Customer </td>
                                                        <td>@item.CustomSpecification </td>
                                                        <td>@item.AdDescription </td>
                                                        <td>@item.AdSize </td>
                                                        <td>@item.AdDate </td>
                                                        <td>@item.Repeat </td>
                                                        <td>@item.AddGraphics </td>
                                                        <td>@item.Deluxe</td>

                                                        <td>@item.Total </td>

                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            }
                            else
                            {

                                <div class="alert alert-warning col-md-12" role="alert">
                                    Sorry! No records exist.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






<script>
    $(".btnView").click(function () {
        $.ajax({
            url: '@Url.Action("ActionPartial", "Ads")',
            type: "GET",
            data: { ID: $(this).attr("data-id") }
        })
            .done(function (oData) {
                $("#actionContainer").html(oData);
            })
            .error(function (error) {
                alert(error);
            });
    });
</script>