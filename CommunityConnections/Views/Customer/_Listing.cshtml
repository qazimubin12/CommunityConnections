@model CommunityConnections.ViewModels.CustomerListingViewModel
@{
    ViewBag.Title = "_Listing";
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        @if (Model.Customers.Count() != 0)
        {
            <div class="card">

                <div class="table-responsive">
                    <table class="table table-striped table-hover ">
                        <thead>
                            <tr>

                                <th>First Name </th>
                                <th>Middle Name</th>
                                <th>Last Name</th>
                                <th>Compnay</th>
                                <th>Title</th>
                                <th>Address</th>
                                <th>City</th>
                                <th>State</th>
                                <th>Country</th>
                                <th>Area Code</th>
                                <th>Phone</th>
                                <th>Other Phone</th>
                                <th>Email</th>
                                <th>Fax</th>
                                <th>Billing Email</th>
                                <th>Payment Method</th>
                                <th>Customer Balance</th>
                                <th>Notes</th>
                                <th>Popup Message</th>
                                <th>Custom Pricing</th>



                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Customers)
                            {
                            <tr>
                                <td>@item.FirstName </td>
                                <td>@item.MiddleName</td>
                                <td>@item.LastName</td>
                                <td>@item.Compnay</td>
                                <td>@item.Title</td>
                                <td>@item.Address</td>
                                <td>@item.City</td>
                                <td>@item.State</td>
                                <td>@item.Country</td>
                                <td>@item.AreaCode</td>
                                <td>@item.Phone</td>
                                <td>@item.OtherPhone</td>
                                <td>@item.Email</td>
                                <td>@item.Fax</td>
                                <td>@item.BillingEmail</td>
                                <td>@item.PaymentMethod</td>
                                <td>@item.CustomerBalance</td>
                                <td>@item.Notes</td>
                                <td>@item.PopupMessage</td>
                                <td>@item.CustomPricing</td>
                                <td>
                                    <button data-id="@item.ID" type="button" class="btnEdit btn btn-info btn-icon-text"><i class="mdi mdi-pencil"></i> EDIT</button>
                                    <a href="@Url.Action("Delete", "Customer", new { ID = item.ID })" class="data-btn btn btn-danger btn-icon-text"><i class="mdi mdi-delete"></i>DELETE</a>

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {

            <div class="alert alert-warning col-md-12" role="alert">
                Sorry! No records exist.
            </div>
        }
    </div>
</div>

<script>
    $(".btnEdit").click(function () {
        $.ajax({
            url: '@Url.Action("Action", "Customer")',
            type: "GET",
            data: {ID: $(this).attr("data-id") }
        })
            .done(function (oData) {
                $("#actionContainer").html(oData);
            })
            .error(function (error) {
                alert(error);
            })
    })
</script>