@model CommunityConnections.ViewModels.CustomerActionViewModel

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                <span>Delete Custom Pricing</span>
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="CPactionForm">
                <input type="hidden" name="CPID" value="@Model.CPID" />
            </form>
            <div class="alert alert-danger" role="alert">
                Are you sure you want to delete this Custom Pricing?
            </div>
        </div>
        <div class="modal-footer">
            <button id="CPactionButton" type="button" class="btn btn-danger"><i class="fas fa-trash-alt mr-1"></i> Delete</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-1"></i> Close</button>
        </div>
    </div>
}

<script>
    $("#CPactionButton").click(function () {
		$.ajax({
			url: '@Url.Action("Delete", "CustomPricings")',
			type: "post",
            data: $("#CPactionForm").serialize()
		})
		.done(function () {

				window.location.href = "@Url.Action("Index", "CustomPricings")";

		});
	});
</script>